{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vue",
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "include": ["typings"]
}